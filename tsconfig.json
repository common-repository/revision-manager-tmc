{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "strict": false,
        "esModuleInterop": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "**/node_modules/**",
        "**/dist/**",
    ]
}